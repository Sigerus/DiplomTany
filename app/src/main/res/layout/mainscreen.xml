<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/startlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="252dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stoplog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="252dp"
        android:text="stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/RGspeed"
        android:layout_width="156dp"
        android:layout_height="139dp"
        app:layout_constraintBottom_toTopOf="@+id/startlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/RBslow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RBslow" />

        <RadioButton
            android:id="@+id/RBnorm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RBnorm" />

        <RadioButton
            android:id="@+id/RBfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RBfast" />

        <RadioButton
            android:id="@+id/RBultra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RBultra" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>